  "mongodb": {
    "host": "localhost",
    "port": 27017,
    "database": "medical_data",
    "collection": "patient_data",
    "collection_operation_team": "operation_team"
  },

  "cassandra": {
    "nodes": ["127.0.0.1"],
    "keyspace": "medical_data",
    "table": "vital_parameters"
  },
  "influxdb": {
    "host": "localhost",
    "port": 8086,
    "database": "medical_data"
  },

  "thresholds": {
    "blood_pressure": {
      "systolic": {
        "LOW": 90, 
        "HIGH": 140
      },
      "diastolic": {
        "LOW": 60, 
        "HIGH": 90
      }
    },
    "oxygen_saturation": {
      "LOW": 90, 
      "HIGH": 100
    },
    "bispectral_index": {
      "LOW": 40, 
      "HIGH": 60
    },
    "etco2": {
      "LOW": 30,
      "HIGH": 43
    },
    "heart_rate": {
      "LOW": 60,
      "HIGH": 100
    }
  },
  "synchronization":{
    "shared_memory_path": "/dev/shm/MySharedMemory",
    "data_format": "ll",
    "buffer_size": 16,
    "generators": ["blood_pressure", "heart_rate"]
  }
  
}
  